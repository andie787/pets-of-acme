generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum Gender {
  male
  female
}

model Pet {
  id       Int      @id @default(autoincrement())
  name     String
  owner    String
  nickname String
  gender   Gender
  species  String
  birthday DateTime
  age      Int      @ignore // try calculate this dynamically instead
  photoUrl String
  createdAt DateTime @default(now())
}